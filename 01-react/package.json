{
  "private": false,
  "name": "make-library",
  "description": "선언적 프로그래밍 방식의 라이브러리 만들기",
  "version": "1.0.0",
  "scripts": {
    "start": "run-p watch serve",
    "serve": "bunx live-server --host=localhost --port=3000 --no-browser",
    "transpile": "babel src --out-dir assets/scripts",
    "watch": "bun transpile --watch",
    "build": "run-s clean bundle",
    "bundle": "bun build index.html --minify --outdir dist",
    "clean": "rimraf -rf dist"
  }
}
